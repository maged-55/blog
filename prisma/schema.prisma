model Blog {
  id      String @id @default(uuid())
  title   String
  message String
  userid  String
  user User @relation(fields: [userid], references: [id])

}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  email    String
  blog     Blog[]
}
